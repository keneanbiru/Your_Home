{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/src/app/pages/home_page.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "/src/app/styles/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/src/app/js/$1"
    },
    {
      "src": "/(.*)\\.html",
      "dest": "/src/app/pages/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/src/app/pages/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/styles/:path*",
      "destination": "/src/app/styles/:path*"
    }
  ]
} 